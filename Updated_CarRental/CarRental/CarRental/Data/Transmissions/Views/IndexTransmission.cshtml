@model IEnumerable<Transmission>

@{
    ViewData["Title"] = "Transmissions";
}

<h1>Transmissions</h1>

<div class="text-right">
    <a asp-action="CreateTransmission" class="btn btn-primary">Create New</a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.TransmissionType)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-primary">
                <td class="blockquote">
                @Html.DisplayFor(modelItem => item.TransmissionId)
                @Html.DisplayFor(modelItem => item.TransmissionType)
            </td>
            <td>
                <div class="btn-group">
                        <a asp-action="EditTransmission" asp-route-id="@item.TransmissionId" class="btn btn-primary">Edit</a>
                        @*<a asp-action="Details" asp-route-id="@item.TransmissionId">Details</a>*@
                        <a asp-action="DeleteTransmission" asp-route-id="@item.TransmissionId" class="btn btn-danger">Delete</a>
            </div>
            </td>
        </tr>
}
    </tbody>
</table>
